---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}
const {
  title,
  description = "A passionate front-end developer focused on creating elegant and efficient solutions.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Henriquehnnm - {title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://henriquehnnm.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Henriquehnnm - Home" />
    <meta
      property="og:description"
      content="A passionate front-end developer focused on creating elegant and efficient solutions."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/images/afb4ba12-7629-46ee-9442-4e20a69595d3.png?token=wMutSDyEAvc_FD5H3OBxPI8nrFQz3HOkvWxiZw7xNXI&height=630&width=1200&expires=33297919393"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="henriquehnnm.netlify.app" />
    <meta property="twitter:url" content="https://henriquehnnm.netlify.app/" />
    <meta name="twitter:title" content="Henriquehnnm - Home" />
    <meta
      name="twitter:description"
      content="A passionate front-end developer focused on creating elegant and efficient solutions."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/images/afb4ba12-7629-46ee-9442-4e20a69595d3.png?token=wMutSDyEAvc_FD5H3OBxPI8nrFQz3HOkvWxiZw7xNXI&height=630&width=1200&expires=33297919393"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
</style>
